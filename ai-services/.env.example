# Gemini AI Service Environment Configuration
# Copy this to .env and add your actual API keys

# Google Gemini API Key
# Get this from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Alternative models (optional)
GEMINI_MODEL_PRO=gemini-1.5-pro-latest
GEMINI_MODEL_VISION=gemini-1.5-pro-vision-latest

# Service Configuration
AI_SERVICE_PORT=5001
AI_SERVICE_HOST=0.0.0.0

# Dynamic Update Settings
UPDATE_INTERVAL_MINUTES=15
DAILY_INSIGHT_TIME=08:00

# Web Automation Settings (Chrome driver path - optional)
CHROME_DRIVER_PATH=
HEADLESS_MODE=true

# Attendance Thresholds
MINIMUM_ATTENDANCE=70.5
WARNING_THRESHOLD=75.0
CRITICAL_THRESHOLD=65.0

# Features Toggle
ENABLE_WEB_AUTOMATION=true
ENABLE_DYNAMIC_UPDATES=true
ENABLE_PREDICTIVE_ANALYSIS=true
ENABLE_REAL_TIME_RECOMMENDATIONS=true
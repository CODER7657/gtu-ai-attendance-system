  },
  "homepage": "https://github.com/CODER7657/gtu-ai-attendance-system#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "python": ">=3.9.0"
  }
}